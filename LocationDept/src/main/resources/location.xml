<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
               
<bean id="l" class="com.location.Location">
<constructor-arg name="city" value="bhubaneswar"></constructor-arg>
<constructor-arg name="locId" value="002"></constructor-arg>
<constructor-arg name="details">
<map>
<entry key-ref="d1" value-ref="e1"></entry>
<entry key-ref="d2" value-ref="e2"></entry>
</map></constructor-arg>
</bean>

<bean id="d1" class="com.location.Department">
<constructor-arg name="id" value="1"></constructor-arg>
<constructor-arg name="name" value="IT"></constructor-arg>
</bean>

<bean id="d2" class="com.location.Department">
<constructor-arg name="id" value="2"></constructor-arg>
<constructor-arg name="name" value="Consultancy"></constructor-arg>
</bean>

<bean id="e1" class="com.location.Employee">
<constructor-arg name="id" value="1"></constructor-arg>
<constructor-arg name="name" value="Romio"></constructor-arg>
<constructor-arg name="doj" value="11/02/2020"></constructor-arg>
<constructor-arg name="salary" value="10800"></constructor-arg>
</bean>

<bean id="e2" class="com.location.Employee">
<constructor-arg name="id" value="2"></constructor-arg>
<constructor-arg name="name" value="Soumya"></constructor-arg>
<constructor-arg name="doj" value="11/12/2018"></constructor-arg>
<constructor-arg name="salary" value="12000"></constructor-arg>
</bean>

</beans>  