<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 

<bean id="answer1" class="com.mapInjection.Answer">
<constructor-arg name="id" value="1"></constructor-arg>
<constructor-arg name="answers" value="programming language"></constructor-arg>
<constructor-arg name="posteddate" value="12/12/2001"></constructor-arg>
</bean>

<bean id="answer2" class="com.mapInjection.Answer">
<constructor-arg name="id" value="2"></constructor-arg>
<constructor-arg name="answers" value="platform"></constructor-arg>
<constructor-arg name="posteddate" value="12/12/2003"></constructor-arg>
</bean>

<bean id="user1" class="com.mapInjection.User">
<constructor-arg name="id" value="1"></constructor-arg>
<constructor-arg name="name" value="Romio"></constructor-arg>
<constructor-arg name="email" value="romior477@gmail.com"></constructor-arg>
</bean>

<bean id="user2" class="com.mapInjection.User">
<constructor-arg name="id" value="2"></constructor-arg>
<constructor-arg name="name" value="Soumya"></constructor-arg>
<constructor-arg name="email" value="soumyasrs@gmail.com"></constructor-arg>
</bean>

<bean id="q" class="com.mapInjection.Question">
<constructor-arg name="id" value="1"></constructor-arg>
<constructor-arg name="name" value="What is Java?"></constructor-arg>
<constructor-arg name="answers">
<map>
<entry key-ref="answer1" value-ref="user1"></entry>
<entry key-ref="answer2" value-ref="user2"></entry>
</map></constructor-arg>
</bean>
</beans>  